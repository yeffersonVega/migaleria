RewriteEngine on
RewriteBase /cartago/
Options +FollowSymLinks
 
# añadir www
RewriteCond %{HTTP_HOST} ^migaleria.com [NC]
RewriteRule (.*) http://www.migaleria.com/$1 [L,R=301]
 
# añadir slash
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule (.*) http://www.migaleria.com/$1/ [L,R=301]